@{
    ViewData["Title"] = "Login";
}

    <div class="container d-flex justify-content-center align-items-center flex-column" style="height: 60vh;">
        <small class="card-title text-center mt-4">coloque suas credenciais, seja</small>
        <h2 class="card-title text-center">Bem Vindo!</h2>
        <form style="width: 300px;">
            <div class="form-group mt-4">
                <label for="username">Usuário:</label>
                <input type="text" class="form-control" id="username" placeholder="Informe seu usuário">
            </div>
            <div class="form-group mt-4">
                <label for="password">Senha:</label>
                <input type="password" class="form-control" id="password" placeholder="Informe sua senha">
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary btn-block w-100">Entrar</button>
            </div>
            <div class="text-center mt-4">
                <p>Não é Cliente? <a href="#!">Cadastre-se</a></p>
            </div>
        </form>
    </div>